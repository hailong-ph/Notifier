<Window x:Class="Notifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notifier"
        mc:Ignorable="d"
        Title="Notifier" Height="220" Width="360">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Remaining time display -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,8" HorizontalAlignment="Center">
            <TextBlock Text="Next reminder in:" FontWeight="Bold" />
            <TextBlock x:Name="RemainingText" Text="--:--" FontSize="18" />
        </StackPanel>

        <!-- Content area -->
        <TextBlock Grid.Row="1"
                   Text="Toast reminder."
                   TextWrapping="Wrap"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>

        <!-- Reset button -->
        <Button Grid.Row="2"
                Margin="0,12,0,0"
                Padding="12,6"
                HorizontalAlignment="Center"
                Content="Reset Timer"
                Click="ResetButton_Click"/>
    </Grid>
</Window>
